generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model badges {
  id_badge String @id @default(uuid())
  slug String 
  name String
  image String
  user user @relation(fields: [slug], references: [id_user])

  @@index([slug])
}

model user {
  id_user String @id @default(uuid())
  email String
  password String
  badges badges[]
}



